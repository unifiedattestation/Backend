{
  "name": "@ua/backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "predev": "prisma generate",
    "dev": "tsx watch src/server.ts",
    "prebuild": "prisma generate",
    "build": "esbuild src/server.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/server.js --sourcemap --external:argon2 --external:@prisma/client",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "parse-attestation": "tsx scripts/parse-attestation.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@peculiar/x509": "^1.10.1",
    "@prisma/client": "^5.18.0",
    "@ua/common": "*",
    "argon2": "^0.41.0",
    "fastify": "^4.28.1",
    "jose": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "js-yaml": "^4.1.0",
    "node-forge": "^1.3.1",
    "pino": "^9.3.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "esbuild": "^0.23.1",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^6.3.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  }
}
